<table class="table table-hover table-inverse">
  <thead class="thead-light">
    <tr>
      <th>デザイン名</th>
      <th>メニュー</th>
      <th>請求額</th>
      <th colspan="2">製作ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @item.design.name %></td>
      <td><%= @item.buy_name %></td>
      <td><%= @order.price %>円</td>
      <td>
        <%= form_with model: [@order, @item], url: admin_order_details_path(@order, @item), local: true do |f| %>
          <%= f.select :production_status, Item.production_statuses.keys.map{|k| [I18n.t("enums.item.production_status.#{k}"), k]}, {}, {class: "form-control"} %>
          <%= f.submit "変更", class: "btn btn-success" %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>