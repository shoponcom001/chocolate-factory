<div class="container">
  <div class="row mt-5">
    <div class="col-8 mx-auto">
      <h4>ブログ編集</h4>
      <%= form_with model: [:admin, @blog], local: true do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>画像</th>
          <td>
            <%= attachment_image_tag @blog, :image, format: 'jpeg', size: "100x100" %>
            <%= f.attachment_field :image, class: "form-control-file" %>
          </td>
        </tr>
        <tr>
          <th>タイトル</th>
          <td><%= f.text_field :title, class: "form-control" %></td>
        </tr>
        <tr>
          <th>内容</th>
          <td><%= f.text_area :body, class: "form-control", rows: "5" %></td>
        </tr>
        <tr>
          <th> </th>
          <td><%= f.submit "編集", class: "btn btn-success" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>