<div class="container">
  <div class="row mt-5">
    <div class="col-8 mx-auto">
      <h4>ブログ一覧</h4>
      <div class="text-right mb-3">
        <%= link_to new_admin_blog_path, class: "btn btn-light shadow-sm rounded-circle p-0 text-center", style: "width:2rem;height:2rem;" do %>
        <p>+</p>
        <% end %>
      </div>
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>日付</th>
            <th>タイトル</th>
          </tr>
        </thead>
        <tbody>
          <% @blogs.each do |blog| %>
          <tr>
            <td><%= blog.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              <%= link_to admin_blog_path(blog) do %>
                <%= blog.title %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>