<div class="container">
  <div class="row mt-5">
    <div class="col-8 mx-auto">
      <h4>デザイン編集</h4>
      <%= form_with model: [:admin, @design], local:true do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <th>デザイン画像</th>
              <th>
                <%= attachment_image_tag @design, :image, format: 'jpeg', size: "100x100" %>
                <%= f.attachment_field :image, class: "form-control-file" %>
              </th>
            </tr>
            <tr>
              <th>デザイン名</th>
              <th><%= @design.name %></th>
            </tr>
            <tr>
              <th>ベース価格</th>
              <th class="text-nowrap"><%= f.text_field :price, class: "form-control mr-1", style: "display: inline" %>円</th>
            </tr>
            <tr>
              <th>注文受付</th>
              <th>
                <%= f.radio_button :is_ordered, :on_sale %>
                <%= f.label :受付中, class: "job_type_label" %>
                <%= f.radio_button :is_ordered, :stop_sale %>
                <%= f.label :受付停止, class: "job_type_label"%>
              </th>
            </tr>
            <tr>
              <th> </th>
              <th>
              <%= f.submit "変更する", class: "btn btn-success"  %>
              </th>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>