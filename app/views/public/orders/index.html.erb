<div class="container">
  <div class="row mt-5">
    <div class="col mx-auto">
      <table class="table">
        <thread>
          <tr>
            <th>id</th>
            <th>注文日</th>
            <th>配送先</th>
            <th>デザイン</th>
            <th>支払い金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thread>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.id %></td>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              <%= order.postal_code %> <br>
              <%= order.address %></br>
              <%= order.name %><br>
              <%= order.phone_number %></br>
            </td>
            <td>
              <% @items.each do |item| %>
                <%= item.design.name %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>