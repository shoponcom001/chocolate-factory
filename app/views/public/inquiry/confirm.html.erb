<div class="container">
  <div class="row mt-5">
    <div class="col-8 mx-auto">
      <h4>お問い合わせ確認</h4>
      <%= form_with model: @inquiry, url: inquiry_thanks_path, local: true do |f| %>
      <table class="table">
        <tr>
          <th>名前</th>
          <td>
            <%= @inquiry.name %>
            <%= f.hidden_field :name %>
          </td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td>
            <%= @inquiry.email %>
            <%= f.hidden_field :email %>
          </td>
        </tr>
        <tr>
          <th>お問い合わせ内容</th>
          <td>
            <%= @inquiry.message %>
            <%= f.hidden_field :message %>
          </td>
        </tr>
        <tr>
          <th> </th>
          <td><%= f.submit "送信", class: "btn btn-success" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>